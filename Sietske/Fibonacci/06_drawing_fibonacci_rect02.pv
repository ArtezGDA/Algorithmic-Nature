size(512, 512)
background(0.2, 0.3, 0.6)

# Fibonacci as a recursive function
def fib(n):
    if n < 2:
        return 1
    return fib(n - 1) + fib(n - 2)

stroke(1)
strokewidth(9)
nofill()
x = 480
y = 480
for i in range(14, 0, -1):
    # variable s to optimize for speed
    s = fib(i)
    # Start at bottom right corner
    # (calculate the from position by using x - s)
    
    rotate(30)
    poly(y - s, x - s, s )
    scale(0.7)
    